      "@thex-pms/pms-http": ["libs/pms-http/src/index.ts"],
      "@thex-pms/pms-interfaces": ["libs/pms-interfaces/src/index.ts"],
      "@thex-pms/pms-permissions": ["libs/pms-permissions/src/index.ts"],
      "@thex-pms/pms-store": ["libs/pms-store/src/index.ts"],
      "@thex-pms/shared": ["libs/shared/src/index.ts"],
      "@thex-pms/tba": ["libs/tba/src/index.ts"]
